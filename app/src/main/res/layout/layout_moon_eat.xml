<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.hearing.moongame.widget.MoonView
        android:id="@+id/moon_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/mask_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mask_view"
        app:radius="@dimen/moon_radius"
        app:text="@string/moon" />

    <com.hearing.moongame.widget.MoonView
        android:id="@+id/mask_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:color="@color/mask_moon"
        app:layout_constraintEnd_toStartOf="@+id/moon_view"
        app:layout_constraintTop_toTopOf="parent"
        app:radius="@dimen/mask_moon_radius"
        tools:color="@color/black" />

</androidx.constraintlayout.widget.ConstraintLayout>